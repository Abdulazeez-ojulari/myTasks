
<div class="card">
  <div class="card-header">
    <%= @task.name %>
  </div>
  <div class="card-body">
    <p><span>Description: </span> <%= @task.description %></p><br />
    <p><span>Software: </span> <%= @task.software %></p>
    <p><span>Deadline: </span> <%= @task.deadline %></p>
    <br />
    <div>
      <%= link_to 'Edit', edit_task_path(@task), class:"btn btn-warning" %>
      <%= link_to 'Delete', @task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %> 
      <%= link_to 'Back', tasks_path, class:"btn btn-success" %>
    </div>
  </div>
</div>
